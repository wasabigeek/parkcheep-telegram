# telegrambot.service
[Unit]
Description=Telegram Bot

[Service]
User=YOURUSER
Group=YOURUSER
WorkingDirectory=/var/www/parkcheep-telegram
Restart=always
ExecStart=/ACTUALPATH/.rvm/bin/rvm 3.1.3 do bundle exec ruby bot.rb
StandardError=journal
StandardOutput=journal
StandardInput=null
EnvironmentFile=/var/www/parkcheep-telegram/shared/telegrambot.env

[Install]
WantedBy=multi-user.target
